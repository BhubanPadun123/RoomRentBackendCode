doctype html
html
  title=title
  include components/header.pug
  style.
     .wrapper{
      width:100%;
      height:100%;
      display:flex;
      justify-content:center;
     }
     form{
      padding:10px;
      border:1px solid;
      display:flex;
      flex-direction:column;
      gap:20px;
     }
     .form-group{
      display:flex;
      gap:8px;
     }
  .wrapper
    h2.text-center Admin User Login
      form(action='/api/auth/signin', method='POST')
        .form-group
          label(for='email') User Name
          input#email.form-control(type='text', name='userName', placeholder='Enter User Name', required)
        .form-group
          label(for='password') Password
          input#password.form-control(type='password', name='password', placeholder='Password', required)
        .form-group.form-check  
        button.btn.btn-primary.btn-block(type='submit') Login
